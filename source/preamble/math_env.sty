% source/preamble/math_env.sty
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{math_env}

% === 基础数学包 ===
\usepackage{mathtools}
\usepackage{amsthm}
\usepackage{amssymb}

% === 数学环境定义 ===
\usepackage{amsthm}

% === 自定义样式：隐藏自动编号，只显示手动参数 ===
\newtheoremstyle{customnonum} % 名称
  {1ex}       % 上间距
  {1ex}       % 下间距
  {\itshape}  % 正文字体
  {}          % 缩进
  {\itshape}  % 标题字体
  {.}         % 标题后标点
  {.5em}      % 标题与正文间距
  {\thmname{#1}\thmnote{ \textit{#3}}} % 只显示环境名 + 手动参数

% === 应用样式 ===
\theoremstyle{customnonum}

% 定理
\newtheorem{theorem}{定理}

% 习题
\newtheorem{problem}{习题}[section]

% 引理
\newtheorem*{lemma}{引理}

% === 数学符号命令 ===
%newcommand{\ol}[1]{\overline{#1}} % 上划线

% === 定界符命令（自动缩放）===
\DeclarePairedDelimiter{\abs}{\lvert}{\rvert} % 优化绝对值
\DeclarePairedDelimiter{\norm}{\lVert}{\rVert} % 优化范数
\DeclarePairedDelimiterX{\ip}[2]{\langle}{\rangle}{#1, #2} % 优化内积

% === 其他工具 ===
\usepackage{verbatim} % 支持注释环境
